<?xml version="1.0" encoding="utf-8"?>
<project>
    <set name="builds_folder" value="."/>
    <set name="builds_folder" value="/AndroidBuilds" if="android"/>

    <meta title="Sample" package="com.sample.buttons" version="1.0.0" company="Company Name"/>
    <app main="FancyPg" path="${builds_folder}/Export" file="fgui"/>

    <window antialiasing="4"/>
    <window background="#303030" fps="60" width="1280" height="960" unless="html5"/>
    <window background="#303030" fps="60"  if="html5"/>
    <!--<window background="#303030" fps="60" orientation="portrait"/>-->
    <source path="src"/>
    <source path="lib/alayout/src"/>
    <source path="lib/fsm/src"/>
    <source path="lib/input/src"/>
    <source path="lib/flgl/src"/>
    <source path="lib/common/src"/>
    <source path="lib/slec/src"/>
    <source path="lib/htext/src"/>
    <source path="lib/taxis/src"/>

    <set  name="playServicesVersion" value="11.4.2" if="android"/>

    <haxelib name="format"/>
    <haxelib name="openfl"/>
    <haxelib name="hxColorToolkit"/>
    <haxelib name="utils"/>

    <haxelib name="hxcpp-debugger"/>
    <haxedef name = "alayout" value = "true" />
    <haxedef name = "openfl_disable_context_cache" value = "true" />
    <haxedef name = "openfl_always_render" value = "true" />

    <haxedef name = "HXCPP_DEBUGGER"  />

    <haxelib name="extension-hub"/>

<!--    <haxeflag name="-dce" value="full" />-->
    <assets path="Assets" include="*"/>

    <!--<template path="Templates" if="android"/>-->
    <!--<include path="keys.xml"/>-->
</project>